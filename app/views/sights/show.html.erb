<div class="art">
  <div class="bl1">
    <h2 class="name_article"><%= @sight.name %></h2>
    <span class="text-gray"><%=@sight.created_at.strftime("%d %B, %Y") %></span>
    <br>
    <h6 class="text_article"><%= @sight.content %></h6>
  </div>
  <div class="bl2">
    <% if @sight.images.present? %>
      <%=image_tag(@sight.images.first.url, {:style => "width: 550px;"}) %>
    <% end %>
  </div>
  <div class="bl3"> </div>
</div>